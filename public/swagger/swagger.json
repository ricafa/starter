{
    "openapi": "3.0.0",
    "info": {
        "title": "Products",
        "version": "0.1"
    },
    "paths": {
        "/api/products": {
            "get": {
                "operationId": "App\\Http\\Controllers\\ProductController::index",
                "responses": {
                    "200": {
                        "description": "List all Products"
                    }
                }
            },
            "post": {
                "operationId": "App\\Http\\Controllers\\ProductController::store",
                "responses": {
                    "201": {
                        "description": "save a product"
                    }
                }
            }
        },
        "/api/products/{id}": {
            "get": {
                "operationId": "App\\Http\\Controllers\\ProductController::show",
                "responses": {
                    "200": {
                        "description": "Show one"
                    }
                }
            },
            "put": {
                "operationId": "App\\Http\\Controllers\\ProductController::update",
                "responses": {
                    "200": {
                        "description": "Update a Product"
                    }
                }
            },
            "delete": {
                "operationId": "App\\Http\\Controllers\\ProductController::delete",
                "responses": {
                    "204": {
                        "description": "Delete"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "operationId": "App\\Http\\Controllers\\UserController::authenticate",
                "responses": {
                    "200": {
                        "description": "Make login"
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "operationId": "App\\Http\\Controllers\\UserController::register",
                "responses": {
                    "201": {
                        "description": "Register new user"
                    }
                }
            }
        },
        "/api/products/{id}/variations": {
            "get": {
                "operationId": "App\\Http\\Controllers\\VariationController::index",
                "responses": {
                    "200": {
                        "description": "List All Variations"
                    }
                }
            },
            "put": {
                "operationId": "App\\Http\\Controllers\\VariationController::update",
                "responses": {
                    "200": {
                        "description": "Update"
                    }
                }
            },
            "post": {
                "operationId": "App\\Http\\Controllers\\VariationController::store",
                "responses": {
                    "201": {
                        "description": "Save"
                    }
                }
            },
            "delete": {
                "operationId": "App\\Http\\Controllers\\VariationController::delete",
                "responses": {
                    "204": {
                        "description": "Delete"
                    }
                }
            }
        }
    }
}